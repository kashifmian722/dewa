<ul class="dewa-opening-hours">
    <li class="day" v-for="(dayItem, dayIndex) in value">
        <div class="dewa-opening-hours-title">
            {{ $tc('dewa-shop.days.' + dayItem.day) }}
        </div>

        <div class="dewa-opening-hours-actions">
            <sw-button @click="removeTimes(dayIndex)">
                <sw-icon name="default-action-trash" size="16px"></sw-icon>
                {{ $tc('dewa-shop.action.remove') }}
            </sw-button>
            <sw-button @click="addTimes(dayIndex)">
                <sw-icon name="default-basic-plus-block" size="16px"></sw-icon>
                {{ $tc('dewa-shop.action.add') }}
            </sw-button>
        </div>

        <template v-if="dayItem.times.length > 0">
            <ul class="dewa-opening-hours-times">
                <li v-for="time in dayItem.times">
                    <sw-datepicker dateType="time" size="small" v-model="time.from"></sw-datepicker>
                    <sw-datepicker dateType="time" size="small" v-model="time.until"></sw-datepicker>
                </li>
            </ul>
        </template>

        <template v-else>
            <sw-field :placeholder="$tc('dewa-shop.action.enterClosedHint')"
                      v-model="dayItem.info">
            </sw-field>
        </template>
    </li>
</ul>

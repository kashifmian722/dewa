<sw-page class="dewa-settings-demo-data">
    <template slot="content">
        <sw-card-view>
            <sw-card :isLoading="isLoading" :title="$tc('dewa-shop.cards.general')">
                <sw-select-field
                        :label="$tc('dewa-shop.properties.type')"
                        v-model="item.type">
                    <option v-for="option in options"
                            :value="option">
                        {{ $tc('dewa-shop.demo.' + option) }}
                    </option>
                </sw-select-field>

                <sw-entity-single-select
                        :label="$tc('dewa-shop.properties.salesChannel')"
                        v-model="item.salesChannelId"
                        labelProperty="name"
                        entity="sales_channel">
                </sw-entity-single-select>

                <sw-button variant="dewa"
                           @click="install()">
                    {{ $tc('dewa-shop.action.install') }}
                </sw-button>

                <sw-button variant="dewa"
                           @click="remove()">
                    {{ $tc('dewa-shop.action.remove') }}
                </sw-button>
            </sw-card>
        </sw-card-view>
    </template>
</sw-page>

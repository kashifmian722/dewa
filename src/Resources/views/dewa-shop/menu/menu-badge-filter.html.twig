<div class="dewa-product-badges-container">
    <div class="filter-multi-select filter-multi-select-dewa-badges filter-panel-item dropdown">
        <button class="filter-panel-item-toggle btn"
                aria-expanded="false"
                data-toggle="dropdown"
                data-boundary="viewport"
                data-offset="0,8"
                aria-haspopup="true">

            {{ 'listing.filterTitleText' | trans }}

            <span class="filter-multi-select-count"></span>

            {% sw_icon 'arrow-medium-down' style {
                'pack': 'solid', 'size': 'xs', 'class': 'filter-panel-item-toggle'
            } %}
        </button>

        <div class="filter-multi-select-dropdown filter-panel-item-dropdown dropdown-menu" data-dewa-filter-panel-item-dropdown>
            <ul class="filter-multi-select-list">

                {% for badge in badges %}
                    <li class="filter-multi-select-list-item">
                        <div class="custom-control custom-checkbox">
                            {% set id = badge.id %}
                            {% set name = badge.translated.name %}
                            <input type="checkbox"
                                   class="custom-control-input filter-multi-select-checkbox"
                                   data-label="{{ name }}"
                                   value="{{ id }}"
                                   id="{{ id }}">

                            <label class="filter-multi-select-item-label custom-control-label" for="{{ id }}">
                                {{ name }}
                                <span class="dewa-product-badge"
                                     style="background-color: {{ badge.backgroundColor }}; color: {{ badge.iconColor }}; fill: {{ badge.iconColor }}">
                                    {{ badge.svgIcon.content|raw }}
                                </span>
                            </label>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

       title="{{ "account.overviewChangeShipping"|trans|striptags }}"
       class="dewa-checkout-change-btn"
       data-address-editor="true"
       data-address-editor-options='{{ addressEditorOptions|json_encode }}'>
        <span class="fi-rs-edit"></span>
    </a>
{% endblock %}
